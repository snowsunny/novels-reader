manifest_version: 2
name: 'novels-reader'
version: '1.0.1'

description: 'Webpage reader for http://syosetu.com'

content_scripts: [
  matches: ['http://ncode.syosetu.com/*', 'https://ncode.syosetu.com/*']
  run_at: 'document_end'
  js: ['content.js']
]

background:
  scripts: ['background.js']

permissions: ['tabs']

options_page: 'html/options.html'
